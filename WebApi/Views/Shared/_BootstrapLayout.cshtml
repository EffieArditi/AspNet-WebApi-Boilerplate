<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    @*@Styles.Render("~/Content/themes/base/css", "~/Content/css")*@
    <link href="~/Content/WebApi.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet">
    

    <script type="text/javascript">
        var WebApiApp = WebApiApp || {};
        WebApiApp.SiteUrl = '@Url.Content("~")';
        WebApiApp.SiteAbsoluteUri = @Html.Raw(string.Format("'{0}'", ViewBag.SiteAbsoluteUri));
        // hide address bar in mobile browsers
        window.scrollTo(0, 1);
    </script>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">WDCIL</a>
                <div id="div-logged-in-user-details" class="pull-right" style="line-height: 38px;">
                    <a id="buttonLogin" href="#login">Login</a>
                </div>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active">
                            <a href="#">Home</a>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">

        @RenderBody()

    </div>
    <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/backbone_underscore")
    @Scripts.Render("~/bundles/app-models")
    @Scripts.Render("~/bundles/app-collections")
    @Scripts.Render("~/bundles/app-views")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)

</body>
</html>
